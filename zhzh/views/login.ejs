<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>登录页面111</title>
	<link rel="stylesheet" type="text/css" href="stylesheets/css/login.css">
    <link rel="stylesheet" href="stylesheets/iconfont/iconfont.css">
</head>
<body>
	<!--<h1>登录页面</h1>
	用户名：<input type="text" id="username"/><br/>
	密码：<input type="password" id="psw"/><br/>
	<button onclick="login()">登录</button>-->
	
	
	<div class="bgs">
		<img src="stylesheets/img/bg.jpg" class="img-bg">
		<img src="stylesheets/img/bar.png" class="img-bar">
		<img src="stylesheets/img/ecshop-logo.png" class="img-logo">
		<img src="stylesheets/img/shopex.png" class="img-shopex">
		<div class="loading">
			<div class="divLoad">
				<div class="divName">	
					<input type="text" placeholder="用户名" class="iptName" id="username"
						style="padding-left:50px;">
				</div>
				<div class="divPassword">
					<input type="password" placeholder="密码" class="iptPassword" id="psw" 
						style="padding-left:50px;">
				</div>
				<div class="divVer">
					<input type="text" placeholder="验证码" class="iptVer" style="padding-left:50px;">
					<div class="ver">
						
					</div>
				</div>
				<input type="button" value="登录" class="btnLoad" onclick="login()">
				
				<div class="divSel">
					<input type="checkbox" checked="checked">
					<span class="spanSel">保存登录信息</span>
					<a href="" class="aa">忘记密码？</a>
					<a href="">去店铺首页>></a>
				</div>
			</div>			
		</div>
	</div>	
	
</body>
</html>
<script src="/javascripts/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="/javascripts/login.js"></script>
<script>
	function login(){
		$.ajax({
			url:"/api/login",
			type:"post",
			data:{
				username:$("#username").val(),
				psw:$("#psw").val()
			},
			success:function(res){
				console.log(res);
			}
		})
	}
</script>